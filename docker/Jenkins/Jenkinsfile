pipeline {
    agent any

    environment {
        APP_NAME   = "edu-egov-nexa"
        DEPLOY_DIR = "/app"
        JAR_NAME   = "edu-egov-nexa.jar"
        PROFILE    = "prod"
    }

    stages {

        /* =========================
         * 1. Git Checkout
         * ========================= */
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'Deploy',
                    url: 'https://github.com/ilkwonhan/edu-egov-nexa.git'
            }
        }

        /* =========================
         * 2. Maven Build
         * ========================= */
        stage('Build') {
            steps {
                sh '''
                    echo "ğŸ”¨ Maven build ì‹œì‘"
                    mvn clean package -DskipTests
                '''
            }
        }

        /* =========================
         * 3. Deploy to Linux Server
         * ========================= */
        stage('Deploy') {
            steps {
                sshagent(['deploy']) {
                    sh '''
                    echo "ğŸš€ ì„œë²„ ë°°í¬ ì‹œì‘"

                    # ì„œë²„ ë””ë ‰í„°ë¦¬ ì¤€ë¹„
                    ssh -o StrictHostKeyChecking=no deploy@linux-server "
                        mkdir -p ${DEPLOY_DIR}
                    "

                    # JAR & ì‹¤í–‰ ìŠ¤í¬ë¦½íŠ¸ ì „ì†¡
                    scp target/*.jar deploy@linux-server:${DEPLOY_DIR}/${JAR_NAME}
                    scp app.sh deploy@linux-server:${DEPLOY_DIR}/app.sh

                    # ì„œë²„ì—ì„œ ì‹¤í–‰
                    ssh deploy@linux-server "
                        chmod +x ${DEPLOY_DIR}/app.sh
                        ${DEPLOY_DIR}/app.sh
                    "
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… CI/CD íŒŒì´í”„ë¼ì¸ ì„±ê³µ'
        }
        failure {
            echo 'âŒ CI/CD íŒŒì´í”„ë¼ì¸ ì‹¤íŒ¨'
        }
    }
}
