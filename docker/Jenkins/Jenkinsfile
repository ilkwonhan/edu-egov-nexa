pipeline {
    agent any

    environment {
        DEPLOY_DIR = "/app"
    }

    stages {

        stage('Git Pull') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ilkwonhan/edu-egov-nexa.git',
                    credentialsId: 'Deploy'   // ğŸ”‘ GitHubìš©
            }
        }

        stage('Deploy to Linux Server') {
            steps {
                sshagent(['deploy']) {       // ğŸ” SSHìš© (ì†Œë¬¸ì!)
                    sh '''
                    ssh -o StrictHostKeyChecking=no deploy@linux-server "
                        mkdir -p ${DEPLOY_DIR}
                        rm -rf ${DEPLOY_DIR}/*
                    "
                    scp -r * deploy@linux-server:${DEPLOY_DIR}/
                    ssh deploy@linux-server "
                        chmod +x ${DEPLOY_DIR}/app.sh
                        ${DEPLOY_DIR}/app.sh
                    "
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… Git pull & ë°°í¬ ì„±ê³µ'
        }
        failure {
            echo 'âŒ ë°°í¬ ì‹¤íŒ¨'
        }
    }
}
